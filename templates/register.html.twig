{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="css/register.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container form-margins">
        <h1 class="mt-4 mb-3">Register
        </h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item active">Register</li>
        </ol>
        <div class="alert hidden" id="register-notify"></div>
        <form class="register-form">
            <div>
                <label for="username-register">Username:</label>
                <input id="username-register" name="username-register" class="form-control"/><br>
            </div>
            <div>
                <label for="password-register">Password:</label>
                <input type="password" id="password-register" name="password-register" class="form-control"/><br>
            </div>
            <!-- TODO: Add option to disable asking for name -->
            <div>
                <label for="first">First name:</label>
                <input id="first" name="first" class="form-control" /><br>
            </div>
            <div>
                <label for="last">Last name:</label>
                <input id="last" name="last" class="form-control" /><br>
            </div>
            <div>
                <label for="email">Email:</label>
                <input id="email" name="email" class="form-control" /><br>
            </div>
            <input type="button" id="submit-register" value="Register" class="btn btn-primary"/>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/rpc/Client.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/login/RegisterService.js') }}"></script>
{% endblock %}